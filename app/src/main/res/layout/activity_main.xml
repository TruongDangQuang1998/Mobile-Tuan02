<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity" android:background="#D8D8D8">
    <View
        android:id="@+id/colored_bar"
        android:layout_width="1."
        android:layout_height="300dp"
        android:background="#2EFE2E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/colored_bar2"
        android:layout_width="800px"
        android:layout_height="850px"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="150dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/textViewFullStack"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintStart_toStartOf="@+id/colored_bar2"
        app:srcCompat="@drawable/donaltrum_1"
        tools:layout_editor_absoluteY="94dp" />

    <TextView
        android:id="@+id/textViewDONALTRUMP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DONAL TRUMP"
            android:textStyle="bold"
        android:textSize="30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textViewFullStack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Full Stack developer, AndroidUI"
        android:textSize="20"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDONALTRUMP" />
    <TextView
        android:id="@+id/textViewAssociated"
        android:layout_width="700px"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Donald Trump is closely associated with the sport of golf. As a real estate developer, Trump began acquiring and constructing golf courses in 1999"
        android:textSize="17"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFullStack" />
    <TextView
        android:id="@+id/textViewNewYork"
        android:layout_width="700px"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="NEW YORK, USA"
        android:textSize="19"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAssociated" />

    <TextView
        android:id="@+id/text178"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9.8"
        android:textSize="30"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="527dp" />

    <TextView
        android:id="@+id/texttRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rating"
        android:textSize="30"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="527dp" />

    <TextView
        android:id="@+id/text98"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="178"
        android:textSize="30"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="527dp" />

    <TextView
        android:id="@+id/textProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="project"
        android:textSize="30"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="527dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HIRE ME"
        android:background="#80000000"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="650dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#80000000"
        android:text="PORTFOLIO"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="650dp" />

</androidx.constraintlayout.motion.widget.MotionLayout>